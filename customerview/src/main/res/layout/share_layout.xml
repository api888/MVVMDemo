<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/shareLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/title"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="大家"
                    android:textColor="@color/text_dark"
                    android:textSize="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_bg"
                    android:layout_width="1dp"
                    android:layout_height="27dp"/>
                <TextView
                    android:text="链接你未曾领略的新大陆"
                    android:textColor="#AEAEAE"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_below="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/every_one_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/title"
                android:layout_marginTop="50dp"
                android:text="邀请你加入链媒体"
                android:textSize="14dp"
                android:textColor="@color/text_dark"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/bitmapImage"
                android:background="@color/white"
                android:elevation="4dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="156dp"
                android:layout_width="256dp"
                android:layout_height="296dp"/>
            <com.codepig.common.view.GlideImageView
                android:layout_below="@+id/bitmapImage"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/default_head"
                android:layout_marginTop="14dp"
                android:id="@+id/userHead"
                android:layout_width="37dp"
                android:layout_height="37dp"/>
            <TextView
                android:layout_below="@+id/userHead"
                android:layout_marginTop="8dp"
                android:id="@+id/userName"
                android:textSize="14dp"
                android:textColor="@color/text_dark"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/userHead"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:id="@+id/promotionCode"
                android:textSize="14dp"
                android:text="邀请码"
                android:layout_marginTop="44dp"
                android:background="#11CBB8"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <ImageView
                android:layout_alignBottom="@+id/promotionCode"
                android:layout_marginBottom="15dp"
                android:id="@+id/qrCodeImage"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:layout_width="84dp"
                android:layout_height="84dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:background="#F1F1F1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/share_download"
                android:layout_width="41dp"
                android:layout_height="36dp"/>
            <TextView
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:textSize="9dp"
                android:text="保存图片\n到相册"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:src="@mipmap/share_download"
                android:layout_width="15dp"
                android:layout_height="10dp"/>
            <ImageView
                android:src="@mipmap/share_scan"
                android:layout_width="37dp"
                android:layout_height="48dp"/>
            <TextView
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="9dp"
                android:text="打开微信\n二维码扫描 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>
