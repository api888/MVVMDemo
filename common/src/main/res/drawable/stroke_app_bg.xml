<?xml version="1.0" encoding="utf-8"?><!-- This is the main color -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 边框颜色 -->
            <solid android:color="#e5e5e5" />
        </shape>
    </item>
    <!-- 给View的上 下设置0.5dp的边框 -->
    <item
        android:bottom="0.5dp"
        android:top="0.5dp">
        <shape>
            <!-- View填充颜色 -->
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>