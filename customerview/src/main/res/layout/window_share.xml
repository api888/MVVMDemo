<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="data"
            type="com.everyone.net.bean.VideoInfoBean">
        </variable>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        分享用布局-->
        <LinearLayout
            android:id="@+id/shareLayout"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/title"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="大家"
                        android:textColor="@color/text_dark"
                        android:textSize="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:background="@color/line_bg"
                        android:layout_width="1dp"
                        android:layout_height="27dp"/>
                    <TextView
                        android:text="链接你未曾领略的新大陆"
                        android:textColor="#AEAEAE"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_below="@+id/title"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/every_one_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/title"
                    android:layout_marginTop="30dp"
                    android:text="邀请你加入链媒体"
                    android:textSize="14dp"
                    android:textColor="@color/text_dark"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/pageShot"
                    android:elevation="4dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="126dp"
                    android:layout_width="150dp"
                    android:layout_height="270dp"/>
                <com.codepig.common.view.CircleImageView
                    android:layout_below="@+id/pageShot"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/default_head"
                    android:layout_marginTop="14dp"
                    android:id="@+id/userHead"
                    app:roundType="roundall"
                    app:roundRadius="19dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp"/>
                <TextView
                    android:layout_below="@+id/userHead"
                    android:layout_marginTop="8dp"
                    android:id="@+id/userName"
                    android:textSize="14dp"
                    android:textColor="@color/text_dark"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/userHead"
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:id="@+id/promotionCode"
                    android:textSize="14dp"
                    android:text="邀请码"
                    android:layout_marginTop="44dp"
                    android:background="#11CBB8"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
                <ImageView
                    android:layout_alignBottom="@+id/promotionCode"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/qrCodeImage"
                    android:layout_marginLeft="25dp"
                    android:background="@color/white"
                    android:layout_width="84dp"
                    android:layout_height="84dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:background="#F1F1F1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/share_download"
                    android:layout_width="41dp"
                    android:layout_height="36dp"/>
                <TextView
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:text="保存图片\n到相册"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:src="@mipmap/share_download"
                    android:layout_width="15dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:src="@mipmap/share_scan"
                    android:layout_width="37dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="9dp"
                    android:text="打开微信\n二维码扫描 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/shareImage"
                    android:visibility="invisible"
                    android:background="@color/line_bg"
                    android:layout_centerInParent="true"
                    android:elevation="4dp"
                    android:scaleType="fitXY"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape_trans_black_half"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="@dimen/small_space"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="@dimen/app_margin_lib"
                        android:orientation="horizontal"
                        android:background="@color/gray_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/text_line_gap_big"
                            android:paddingRight="@dimen/text_line_gap_big"
                            android:paddingTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text=" 私赏指数"
                                    android:textSize="@dimen/font_h4"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:drawableStart="@mipmap/fire"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_marginTop="@dimen/text_gap_space"
                                    android:layout_marginBottom="@dimen/text_gap_space"
                                    android:background="@color/line_bg_trans_white"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"/>
<!--                                <View-->
<!--                                    android:layout_weight="1"-->
<!--                                    android:layout_width="1dp"-->
<!--                                    android:layout_height="wrap_content"/>-->
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/videoHeatTV"
                                    android:text='@{data.video_heat+""}'
                                    android:textColor="@color/text_gray"
                                    android:textSize="28dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <View
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:src="@mipmap/eye"
                                        android:layout_marginRight="@dimen/text_gap_space"
                                        android:layout_width="14dp"
                                        android:layout_height="11dp"/>
                                    <TextView
                                        android:text="私赏"
                                        android:textSize="@dimen/font_h7"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_marginLeft="@dimen/text_line_gap_big"
                                        android:text='@{data.total_down+""}'
                                        android:textSize="@dimen/font_h7"
                                        android:textColor="@color/text_gray"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="6dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:src="@mipmap/money2"
                                        android:layout_marginRight="@dimen/text_gap_space"
                                        android:layout_width="14dp"
                                        android:layout_height="11dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="打赏"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_h7" />

                                    <TextView
                                        android:layout_marginLeft="@dimen/text_line_gap_big"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{data.total_exceptional+""}'
                                        android:textColor="@color/text_gray"
                                        android:textSize="@dimen/font_h7" />
                                </LinearLayout>
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:minWidth="140dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/subBtn"
                                        android:visibility="gone"
                                        android:background="@drawable/shape_white_bg"
                                        android:text=" 订阅"
                                        android:gravity="center"
                                        android:paddingTop="@dimen/text_gap_space_small"
                                        android:paddingBottom="@dimen/text_gap_space_small"
                                        android:paddingLeft="12dp"
                                        android:paddingRight="8dp"
                                        android:drawableStart="@mipmap/add"
                                        android:layout_marginRight="@dimen/gap_space"
                                        android:textColor="@color/text_dark"
                                        android:textSize="@dimen/font_h7"
                                        android:layout_width="61dp"
                                        android:layout_height="23dp"/>
                                    <TextView
                                        android:id="@+id/unSubBtn"
                                        android:visibility="gone"
                                        tools:visibility="visible"
                                        android:background="@drawable/shape_gray_bg"
                                        android:text="取消关注"
                                        android:gravity="center"
                                        android:paddingTop="@dimen/text_gap_space_small"
                                        android:paddingBottom="@dimen/text_gap_space_small"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:layout_marginRight="@dimen/gap_space"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_h7"
                                        android:layout_width="61dp"
                                        android:layout_height="23dp"/>
                                    <TextView
                                        android:id="@+id/payBtn"
                                        android:background="@drawable/shape_white_bg"
                                        android:text="  私赏"
                                        android:paddingTop="@dimen/text_gap_space_small"
                                        android:paddingBottom="@dimen/text_gap_space_small"
                                        android:paddingLeft="@dimen/text_line_gap_big"
                                        android:paddingRight="@dimen/text_line_gap_big"
                                        android:drawableStart="@mipmap/eye_black"
                                        android:textColor="@color/text_dark"
                                        android:textSize="@dimen/font_h7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:src="@mipmap/angle"
                            android:layout_gravity="bottom"
                            android:rotation="180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:text="分享到"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_h7"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="@dimen/small_space"
                        android:layout_marginBottom="@dimen/small_space"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/reportBtn"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/report_big"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="举报"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/unlikeBtn"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/unlike_icon"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="不喜欢"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/shareTimeLineBtn"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/share_wechat_c"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="朋友圈"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/shareWeChatBtn"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/share_wechat"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="微信"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/shareWeiboBtn"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/share_sina"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="新浪微博"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/shareQQBtn"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/share_qq"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="QQ"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/shareQZoneBtn"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:background="@drawable/round_circle_trans_light_big"
                                android:layout_width="48dp"
                                android:layout_height="48dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/share_qzone"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_marginTop="@dimen/text_gap_space"
                                android:textColor="@color/white"
                                android:text="QQ空间"
                                android:textSize="@dimen/font_h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:background="@color/line_bg_trans_white"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:background="@color/gray_btn"
                    android:text="取消"
                    android:gravity="center"
                    android:id="@+id/closeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>